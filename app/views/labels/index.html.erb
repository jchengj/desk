
<div class="col-md-6">
  
  <div class="page-header">
    <h3>Available Labels</h3>
  </div>
  
  <% if @labels.blank? %>
    You don't have any label
  <% else %>
    <% @labels.in_groups_of(Label::GROUP, false) do |labels| %>
    <div class="row">
      <% labels.each do |l| %>
        <div class="col-md-4">
          <h3><span class="label label-info"><%= l.name %></span></h3>
        </div>
      <% end %>
    </div>
    <% end %>
  <% end %>
</div>
<div class="col-md-1"></div>

<div class="col-md-5">
  <div class="page-header">
    <h3>Create New Label</h3>
  </div>
  <%= form_tag(labels_path, role: "form") do %>
    <div class="form-group">
      <%= label_tag "name" %>
      <%= text_field_tag "name", "", class: "form-control", placeholder: "Ex: Interview" %>
    </div>
    <div class="form-group">
      <%= label_tag "description" %>
      <%= text_area_tag "description", "", class: "form-control", placeholder: "Ex: Lorem Ipsum" %>
    </div>    
    <button type="submit" class="btn btn-default">Submit</button>
  <% end %>
</div>



<div class="col-md-4">
  
  <div class="page-header">
    <h3>Available Labels</h3>
  </div>
  
  <% if @labels.blank? %>
    You don't have any label
  <% else %>
    <% @labels.in_groups_of(Label::GROUP, false) do |labels| %>
    <div class="row">
      <% labels.each do |l| %>
        <div class="col-md-6">
          <h3><span class="label label-info"><%= l.name %></span></h3>
        </div>
      <% end %>
    </div>
    <% end %>
  <% end %>
</div>

